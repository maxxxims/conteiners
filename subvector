#include <iostream>
using namespace std;

class sub_vector{
    public:
        void init(){
            top=0;
            capacity=0;
            data = nullptr;
            cout<<"vector is successfully created"<<endl;
        }

        void push(int a){
            if(top>=capacity){
                capacity++;
                int* p = new int[capacity];
                for(int i=0; i<top; i++){
                    p[i]=data[i];
                }
                p[top]=a;
                top++;
                data=p;
                delete[] p;
            }
            else{
                data[top] = a;
                top++;

            }
            print();
            //cout<<"You write "<<data[top-1]<<endl;
        }

/*
    int pop_back(){
        if(top>0){
            top--;
            //capacity--;
            int* p= new int [capacity];
            for(int i=0; i<top; i++){
                p[i]=data[i];
            }
            delete[] data;
            data = p;
            delete[] p;

        }
        else{
            return 0;
        }
    }*/



    void print(){
        for(int i=0; i<top; i++){
            cout<<data[i]<<" ";
        }
        cout<<endl;
        cout<<"top is "<<top<<" capacity is "<<capacity<<endl<<endl;
    }

    ~sub_vector(){
        delete[] data;
    }

    private:
        unsigned int top;
        unsigned int capacity;
        int* data;

};

int main(){
    sub_vector subvector;
    subvector.init();
    subvector.push(1);
    subvector.push(2);
    subvector.push(3);
    subvector.push(4);
}

